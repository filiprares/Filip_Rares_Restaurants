<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Filip_Rares_Restaurants.WelcomePage"
             Title="Welcome">

    <StackLayout Padding="30" Spacing="20">
        <Image Source="restaurant.png"
               Aspect="AspectFit"
               HorizontalOptions="Center"
               VerticalOptions="CenterAndExpand"/>
        <Label Text="Welcome to Our Restaurant App!" FontSize="Large" HorizontalOptions="Center"/>
        <Button Text="Login" Command="{Binding NavigateToLoginCommand}"/>
        <Button Text="Register" Command="{Binding NavigateToRegisterCommand}"/>
    </StackLayout>
</ContentPage>
