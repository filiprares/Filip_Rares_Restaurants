<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Filip_Rares_Restaurants.RestaurantDetailPage"
             Title="Restaurant Details">

    <ScrollView>
        <StackLayout Margin="20">
            <Label Text="Name" FontSize="Medium" />
            <Label Text="{Binding Nume}" FontSize="Small" />

            <Label Text="Address" FontSize="Medium" />
            <Label Text="{Binding Adresa}" FontSize="Small" />

            <Label Text="Description" FontSize="Medium" />
            <Label Text="{Binding Descriere}" FontSize="Small" />

            <Label Text="Operating Hours" FontSize="Medium" />
            <Label Text="{Binding OrarFunctionare}" FontSize="Small" />
        </StackLayout>
    </ScrollView>

</ContentPage>
